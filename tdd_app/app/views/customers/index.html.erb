<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Listando Clientes</h1>
 
<table border='1'>
  <thead>
    <tr>
      <td>Nome</td>
      <td>Email</td>
      <td></td>
      <td></td>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= link_to 'Mostrar', customer_path(customer) %> </td>
        <td><%= link_to 'Editar', edit_customer_path(customer) %> </td>
      </tr>
    <% end %>
  </tbody>

</table>

<%= link_to 'Novo Cliente', new_customer_path%>
